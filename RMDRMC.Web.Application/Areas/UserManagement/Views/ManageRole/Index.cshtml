@model  List<RolesVM>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MenuLayout.cshtml";
}

<div class="panel panel-default" style="border-color:#ddd;" id="approlepanel">
    <div class="panel-heading">
        <label>Application Roles</label>
    </div>

    <div id="approles" class="panel-body  panel-collapse collapse in" role="tabpanel" aria-labelledby="Header Fields">

        @*Action Button Starts*@
        <div class="row text-center" style="margin-bottom:20px;">

            <input type="button" value="Create" class="ButtonWithImage btnCreateNewRole" data-alert="false"  onclick="RedirectCreateNewRole()" />
            <input type="button" value="Update" class="ButtonWithImage btnUpdateRoles" onclick="UpdateRole()"  data-alert="false" />
            <input type="button" value="Delete" class="ButtonWithImage btnUpdateRoles" onclick="DeleteRole()" data-alert="false" />
            <input type="button" value="Cancel" class="ButtonWithImage" onclick="RefreshScreen()" />

        </div>
        @*Action Button Ends*@

        @Html.Partial("_RoleSearch", null)

        @*Action Button Starts*@
        <div class="row text-center" style="margin-bottom:20px;">

            <input type="button" value="Create" class="ButtonWithImage btnCreateNewRole" data-alert="false" onclick="RedirectCreateNewRole()" />
            <input type="button" value="Update" class="ButtonWithImage btnUpdateRoles" onclick="UpdateRole()" data-alert="false" />
            <input type="button" value="Delete" class="ButtonWithImage btnUpdateRoles" onclick="DeleteRole()" data-alert="false" />
            <input type="button" value="Cancel" class="ButtonWithImage" onclick="RefreshScreen()" />

        </div>
        @*Action Button Ends*@

    </div>
</div>


<script src="~/CustomScripts/UserManagement.js"></script>
